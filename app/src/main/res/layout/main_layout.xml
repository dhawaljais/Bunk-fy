<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </RelativeLayout>

            <ImageView
                android:id="@+id/image"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_student" />

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_present"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:elevation="15dp"
                card_view:cardBackgroundColor="#fff"
                card_view:cardCornerRadius="2dp"
                card_view:contentPadding="5dp">

                <RelativeLayout
                    android:id="@+id/relativeLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image"
                    android:layout_centerHorizontal="true">

                    <ImageButton
                        android:id="@+id/subButton1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:background="@color/transparent"
                        android:scaleType="centerInside"
                        android:src="@drawable/minus" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_present"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/plusButton1"
                        android:layout_toRightOf="@+id/subButton1">

                        <EditText
                            android:id="@+id/presentEditText1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:hint="@string/present_hint"
                            android:inputType="number"
                            android:maxLength="3" />
                    </android.support.design.widget.TextInputLayout>

                    <ImageButton
                        android:id="@+id/plusButton1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@color/transparent"
                        android:scaleType="centerInside"
                        android:src="@drawable/plus" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_view_present"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="40dp"
                android:elevation="15dp"
                card_view:cardBackgroundColor="#fff"
                card_view:cardCornerRadius="2dp"
                card_view:contentPadding="5dp">

                <RelativeLayout
                    android:id="@+id/relativeLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <ImageButton
                        android:id="@+id/subButton2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:background="@color/transparent"
                        android:scaleType="centerInside"
                        android:src="@drawable/minus" />

                    <ImageButton
                        android:id="@+id/plusButton2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@color/transparent"
                        android:scaleType="centerInside"
                        android:src="@drawable/plus" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/plusButton2"
                        android:layout_toRightOf="@+id/subButton2">

                        <EditText
                            android:id="@+id/presentEditText2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:hint="@string/total_hint"
                            android:inputType="number"
                            android:maxLength="3" />
                    </android.support.design.widget.TextInputLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_percentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_view_total"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="40dp"
                android:elevation="15dp"
                card_view:cardBackgroundColor="#fff"
                card_view:cardCornerRadius="2dp"
                card_view:contentPadding="5dp">

                <RelativeLayout

                    android:id="@+id/relativeLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_centerHorizontal="true">

                    <ImageButton
                        android:id="@+id/subButton3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:background="@color/transparent"
                        android:scaleType="centerInside"
                        android:src="@drawable/minus" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_percentage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/plusButton3"
                        android:layout_toRightOf="@+id/subButton3">

                        <EditText
                            android:id="@+id/presentEditText3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:hint="@string/percentage_hint"
                            android:inputType="numberDecimal"
                            android:maxLength="5" />
                    </android.support.design.widget.TextInputLayout>

                    <ImageButton
                        android:id="@+id/plusButton3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"

                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@color/transparent"
                        android:scaleType="centerInside"
                        android:src="@drawable/plus" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/outputButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_view_percentage" />

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_output"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/outputButton"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="40dp"
                android:elevation="15dp"
                card_view:cardBackgroundColor="#fff"
                card_view:cardCornerRadius="2dp"
                card_view:contentPadding="5dp">

                <TextView
                    android:id="@+id/textOutput"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/button"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>